pkgname=mate-common
pkgver=2011.10.29
pkgrel=1
pkgdesc="Common development macros for MATE"
arch=('any')
license=('GPL')
depends=()
makedepends=()
options=('!libtool')
url="http://matsusoft.com.ar/projects"
groups=('mate')
source=(http://sourceforge.net/projects/matede/files/${pkgver}/${pkgname}.tar.gz/download)
sha256sums=('c1a0d24b2e4c78756ef3f7f760d6284d58c368774373ff7cce85dbea5e84e33b')

build() {
	cd "${srcdir}/${pkgname}"
	./configure --prefix=/usr || return 1
	make || return 1
}

package() {
	cd "${srcdir}/${pkgname}"
	make DESTDIR="${pkgdir}" install || return 1
}
