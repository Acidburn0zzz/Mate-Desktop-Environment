pkgname=libmatekeyring
pkgver=2011.08.31
pkgrel=1
pkgdesc="MATE keyring client library"
arch=(i686 x86_64)
license=('GPL' 'LGPL')
depends=('libgcrypt') # 'eggdbus' 'mate-keyring'
makedepends=('intltool' 'pkgconfig' 'python')
groups=('mate')
options=('!emptydirs')
url="http://matsusoft.com.ar/projects"
source=(http://sourceforge.net/projects/matede/files/${pkgver}/${pkgname}.tar.gz/download)
sha256sums=('279a9b1ddcf178e6a3d562ad9e517177262739b27ab62d9ecab68edf455c2a24')

build() {
	cd "${srcdir}/${pkgname}"
	./configure --prefix=/usr --sysconfdir=/etc \
		--localstatedir=/var --disable-static \
		--libexecdir=/usr/lib/mate-keyring || return 1

	make || return 1
}

package() {
    cd "${srcdir}/${pkgname}"

    make DESTDIR="${pkgdir}" install || return 1
}
