	* libmateui/mate-druid.c: (mate_druid_class_init),
	(mate_druid_accessible_get_n_children),
	(mate_druid_accessible_ref_child),
	(mate_druid_accessible_class_init),
	(mate_druid_accessible_get_type), (mate_druid_accessible_new),
	(mate_druid_accessible_factory_get_accessible_type),
	(mate_druid_accessible_factory_create_accessible),
	(mate_druid_accessible_factory_class_init),
