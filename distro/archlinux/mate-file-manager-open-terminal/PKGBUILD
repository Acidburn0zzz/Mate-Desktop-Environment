pkgname=mate-file-manager-open-terminal
pkgver=0.0
pkgrel=1
pkgdesc="An extension for opening terminals in arbitrary local paths"
arch=('i686' 'x86_64')
url="http://manny.cluecoder.org/packages/nautilus-open-terminal"
license=('GPL')
depends=('mate-file-manager')
makedepends=('pkgconfig' 'intltool')
options=('!libtool')
source=(http://matsusoft.com.ar/uploads/gnu-linux/mate/${pkgname}.tar.gz)
sha256sums=('3041ce4d09d35a88cb3e744e26eb06f5ed09521b5d04619ac35a357d8b41f30d')

build() {
	cd "$srcdir/$pkgname"
	
	./configure --prefix=/usr

	#fix non-standard directory
	sed -i 's|${prefix}/etc|/etc|' Makefile

	make || return 1
}

package() {
	cd "$srcdir/$pkgname"
	make DESTDIR="$pkgdir" install
}
