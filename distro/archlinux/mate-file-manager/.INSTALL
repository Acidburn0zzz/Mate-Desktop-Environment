_pkgname=caja

post_install() {
	usr/sbin/mateconfpkg --install ${_pkgname}
	update-desktop-database -q
	gtk-update-icon-cache -q -t -f usr/share/icons/hicolor
	update-mime-database usr/share/mime > /dev/null
}

pre_upgrade() {
	pre_remove $1
}

post_upgrade() {
	post_install $1
}

pre_remove() {
	usr/sbin/mateconfpkg --uninstall ${_pkgname}
}

post_remove() {
	update-desktop-database -q
	gtk-update-icon-cache -q -t -f usr/share/icons/hicolor
	update-mime-database usr/share/mime > /dev/null
}
