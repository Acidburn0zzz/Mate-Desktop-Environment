pkgname=mate-user-docs
pkgver=0.0.0
pkgrel=1
pkgdesc="User documentation for MATE"
arch=('any')
license=('FDL')
depends=()
makedepends=('mate-doc-utils')
url="http://matsusoft.com.ar/projects"
groups=('mate')
source=(http://matsusoft.com.ar/uploads/gnu-linux/mate/${pkgname}.tar.gz)
sha256sums=('92314ac57e4e5813f4f0885dcbec3ea6dbd5028707f922bbea7cf5a8f6118256')

build() {
	cd "${srcdir}/${pkgname}"

	./configure --prefix=/usr --sysconfdir=/etc \
		--localstatedir=/var --disable-scrollkeeper || return 1

	make || return 1
}

package() {
	cd "${srcdir}/${pkgname}"
	make DESTDIR="${pkgdir}" install || return 1
}
