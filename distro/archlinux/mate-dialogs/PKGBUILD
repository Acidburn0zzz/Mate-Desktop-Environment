pkgname=mate-dialogs
pkgver=0.0.0
pkgrel=2
pkgdesc="Display graphical dialog boxes from shell scripts"
arch=(i686 x86_64)
license=('LGPL')
depends=('libmatenotify')
makedepends=('intltool' 'gtk-doc' 'mate-doc-utils')
url="http://matsusoft.com.ar/projects"
groups=('mate')
provides=('zenity')
conflicts=('zenity')
source=(http://matsusoft.com.ar/uploads/gnu-linux/mate/${pkgname}.tar.gz)
sha256sums=('588ef2e1f9dac5c57618ed8dad5cfe6635a5915dc14f3e463c88c4373d47c68d')

build() {
	cd "${srcdir}/${pkgname}"
	./configure --prefix=/usr --sysconfdir=/etc \
		--localstatedir=/var --disable-scrollkeeper
	make
}

package() {
	cd "${srcdir}/${pkgname}"

	make DESTDIR="${pkgdir}" install
	# hax!
	ln -s matedialog ${pkgdir}/usr/bin/zenity
}
