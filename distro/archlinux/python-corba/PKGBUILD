pkgname=python-corba
pkgver=0.0
pkgrel=1
pkgdesc="Python binding for Mate CORBA"
arch=('i686' 'x86_64')
url="http://matsusoft.com.ar/projects/"
license="GPL"
depends=('python2' 'mate-corba')
makedepends=('pkgconfig')
options=('!emptydirs')
source=(http://matsusoft.com.ar/uploads/gnu-linux/mate/${pkgname}.tar.gz)
sha256sums=('92d279144ff93e731a34a3ed0ccb23aa9f90f5ce2e1fa68692e9780ab748c319')

build() {
	export PYTHON=python2
	cd "${srcdir}/${pkgname}"

	./configure --prefix=/usr --sysconfdir=/etc \
		--localstatedir=/var --disable-static || return 1
	make || return 1
}

package() {
	cd "${srcdir}/${pkgname}"
	
	make DESTDIR="$pkgdir" install || return 1
}
