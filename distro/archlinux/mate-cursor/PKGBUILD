pkgname=mate-cursor
pkgver=0.0.0
pkgrel=1
pkgdesc="Cursor for MATE"
arch=('any')
license=('CCPL:by-sa')
url="http://matsusoft.com.ar/projects"
makedepends=()
groups=('mate')
source=(http://matsusoft.com.ar/uploads/gnu-linux/mate/${pkgname}.tar.gz)
sha256sums=('bad62f6c63c5610b1389fc336eeddf31292a0034e0c8ae4641a90ab7dd2aa209')

build() {
	cd "${srcdir}/${pkgname}"
	./configure --prefix=/usr || return 1

	make || return 1
}

package() {
    cd "$srcdir/$pkgname"
    
    make DESTDIR="$pkgdir" install || return 1
}
