pkgname=libmatenotify
pkgver=0.0.0
pkgrel=3
pkgdesc="Desktop notification library"
arch=('i686' 'x86_64')
license=('LGPL')
depends=('gdk-pixbuf2')
makedepends=('gtk2' 'gobject-introspection')
groups=('mate')
options=()
url="http://matsusoft.com.ar/projects"
source=(http://matsusoft.com.ar/uploads/gnu-linux/mate/${pkgname}.tar.gz)
sha256sums=('48cabf3e54b8a1a8d9146b8ca96ef40738d4d7d2ac0a58ca778d8e180bd8e58a')

build() {
	cd "${srcdir}/${pkgname}"
	./configure --prefix=/usr --disable-static
	make
}

package() {
	cd "${srcdir}/${pkgname}"
	make DESTDIR="${pkgdir}" install
}
