pkgname=libmatecanvas
pkgver=0.0.0
pkgrel=3
pkgdesc="The MATE Canvas library"
arch=(i686 x86_64)
license=('LGPL')
depends=('libglade' 'libart-lgpl')
makedepends=('pkgconfig' 'intltool')
url="http://matsusoft.com.ar/projects"
source=(http://matsusoft.com.ar/uploads/gnu-linux/mate/${pkgname}.tar.gz)
sha256sums=('985d565a5d5cfef1863c7a06b490cbd8a09ed8db4428fc45019acc4a68a30a76')

build() {
	cd "${srcdir}/${pkgname}"
	./configure --prefix=/usr --disable-static \
		--enable-glade || return 1
	make || return 1
}

package() {
	cd "${srcdir}/${pkgname}"

	make DESTDIR="${pkgdir}" install
}
