pkgname=libmatekeyring
pkgver=0.0.0
pkgrel=3
pkgdesc="MATE keyring client library"
arch=(i686 x86_64)
license=('GPL' 'LGPL')
depends=('libgcrypt' 'mate-keyring') # 'eggdbus'
makedepends=('intltool' 'pkgconfig' 'python')
groups=('mate')
options=('!emptydirs')
url="http://matsusoft.com.ar/projects"
source=(http://matsusoft.com.ar/uploads/gnu-linux/mate/${pkgname}.tar.gz)
sha256sums=('57add379a324e922358534b5e8143f702813486f80706678ef79ecddc6744ef7')

build() {
	cd "${srcdir}/${pkgname}"
	./configure --prefix=/usr --sysconfdir=/etc \
		--localstatedir=/var --disable-static \
		--libexecdir=/usr/lib/mate-keyring || return 1

	make || return 1
}

package() {
    cd "${srcdir}/${pkgname}"

    make DESTDIR="${pkgdir}" install || return 1
}
